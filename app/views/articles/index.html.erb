<div class="row articles-showing">
  <div class="col-xs-11 col-sm-11 col-md-12">
    <h1 id='title-index'>Articles</h1>
    <div class="row btn-create">
      <div class="col-md-12">
        <div class="pull-right">
          <%= link_to 'New article', new_article_path, class: "btn btn-success" %>
        </div>
      </div>
    </div>


    <table class="table table-table-striped">
      <tr>
        <th>Title</th>
        <th>Created At</th>
        <th>Actions</th>
      </tr>

      <% @articles.each do |article| %>
        <tr>
          <td><%= article.title %></td>
          <td><%= article.created_at %></td>

          <td>
            <%= link_to 'Show', article_path(article), class: "btn btn-success" %>
            <%= link_to 'Edit', edit_article_path(article), class: "btn btn-primary" %>
            <%= link_to 'Delete', article_path(article), class: "btn btn-danger",
                  method: :delete,
                  data: { confirm: 'Are you sure?' } %>
              <i class="icon-remove"></i>
          </td>
        </tr>
      <% end %>
    </table>
  </div>

</div>
